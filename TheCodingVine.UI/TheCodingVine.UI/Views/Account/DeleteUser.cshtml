@model TheCodingVine.UI.ViewModels.UserViewModel
@{
    ViewBag.Title = "Delete A User";
}
<br />
<h3 class="text-center">Delete User Confirmation</h3>

<div class="row">
    <div class="container-fluid col-lg-10 col-md-10 col-sm-10 table-bordered">
        <br />
        @using (Html.BeginForm("DeleteUser","Account",FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-4">
                    @Html.HiddenFor(i => i.User.UserName)
                    <h3>@Model.User.UserName</h3>
                </div>
                <div class="col-md-4">
                    <h3>
                        Roles:
                        @foreach (var role in Model.AvailRoles)
                        {
                            @Model.AvailRoles.FirstOrDefault(i => i.Id == role.Id).Name
                        }
                    </h3>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-8">
                    <p>Are you sure that you want to delete this user?</p>
                </div>
                <div class="col-md-2">
                    <h3 class="text-center"><button type="submit" class="btn btn-outline-warning">Delete</button></h3>
                </div>
                <div class="col-md-2">
                    <h3 class="text-center">@Html.ActionLink("Cancel", "AllUsers", "Account", null, new { @class = "btn btn-outline-info" })</h3>
                </div>
            </div>
            }
        </div>
</div>