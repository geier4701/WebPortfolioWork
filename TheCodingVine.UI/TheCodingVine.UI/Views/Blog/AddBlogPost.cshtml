@model TheCodingVine.UI.ViewModels.BlogVM
@{
    ViewBag.Title = "Add Blog Post";
}
 
<h2 class="text-center">Add a Blog Post</h2>
    @using (Html.BeginForm("AddBlogPost", "Blog", FormMethod.Post))
    {
        @Html.ValidationSummary(true)

    <div class="form-row">
        <div class="col-md-6 form-inline">
            <label>Title: &nbsp; &nbsp;</label>
            @Html.TextBoxFor(m => m.Blog.Title, new { @class = "form-control", placeholder = "Title" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Blog.Title) </span>
        </div>
        <div class="col-md-6 form-inline mr-auto">
            <label>Search Tags:&nbsp; &nbsp; </label>
            @Html.TextBoxFor(m => m.Blog.TagInputs, new { @class = "form-control", placeholder = "Enter Tags" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Blog.TagInputs) </span> @*Make them enter a tag*@
        </div>
    </div>
    <br />
        <div class="form-group">
            <label>Blog Body:</label>
            @Html.TextAreaFor(m => m.Blog.Content, new { @class = "form-control" })
            <span class="text-danger">@Html.ValidationMessageFor(m => m.Blog.Content) </span>
        </div>
        <div class="form-row">
            <div class="col-md-4 form-inline">
                <label>Post Date:&nbsp; &nbsp;</label>
                @Html.TextBoxFor(m => m.Blog.PostDate, new { @class = "form-control", placeholder = "Post Date" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Blog.PostDate) </span>
            </div>
            <div class="col-md-4 form-inline">
                <label>Remove Date:&nbsp; &nbsp; </label>
                @Html.TextBoxFor(m => m.Blog.RemoveDate, new { @class = "form-control", placeholder = "Remove Date" })
                <span class="text-danger">@Html.ValidationMessageFor(m => m.Blog.RemoveDate) </span>
            </div>
            <div class="col-md-4 form-inline mr-auto">
                <button type="submit" class="btn btn-outline-success">Submit Blog For Approval</button> &nbsp;&nbsp;
                @Html.ActionLink("Cancel Blog Creation", "MyBlogs", "Blog", null, new { @class = "btn btn-outline-info" })
            </div>
        </div>
    }


