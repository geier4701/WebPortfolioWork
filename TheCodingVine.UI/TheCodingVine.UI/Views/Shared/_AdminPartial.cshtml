@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Blogging Portal
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            @Html.ActionLink("My Blogs", "MyBlogs", "Blog", null, new { @class = "dropdown-item" })
            @Html.ActionLink("Add Blog", "AddBlogPost", "Blog", null, new { @class = "dropdown-item" })
        </div>
    </li>

    if (User.IsInRole("Admin"))
    {
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Admin Portal
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            @Html.ActionLink("View All Blogs", "GetAllBlogs", "Blog", null, new { @class = "dropdown-item" })
            @Html.ActionLink("Approve Blogs", "ViewPending", "Blog", null, new { @class = "dropdown-item" })
            <div class="dropdown-divider"></div>
            @Html.ActionLink("View All Static Posts", "ViewStaticPosts", "StaticPost", null, new { @class = "dropdown-item" })
            @Html.ActionLink("Create Static Post", "CreateStaticPost", "StaticPost", null, new { @class = "dropdown-item" })
            <div class="dropdown-divider"></div>
            @Html.ActionLink("View All Users", "AllUsers", "Account", null, new { @class = "dropdown-item" })
            @Html.ActionLink("Add User", "AddUser", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "dropdown-item" })
        </div>
    </li>
    }
}
