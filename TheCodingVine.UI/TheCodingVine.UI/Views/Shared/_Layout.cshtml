<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adventures with Cod</title>
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'advlist autolink link image lists charmap print preview'
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<nav class="navbar navbar-expand-md sticky-top navbar-light" style="background-color: #33cc33;">
        @Html.ActionLink("Adventures with Cod", "Index", "Home", null, new { @class = "navbar-brand" })
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            @Html.Partial("_SiteLinks")
            @Html.Partial("_AdminPartial")
        </ul>

        @using (Html.BeginForm("ViewSearchResults", "Blog", FormMethod.Post, new { @class = "form-inline my-2 my-lg-0" }))
        {
            @Html.TextBox("searchTag", null, new { @class = "form-control mr-sm-2", type = "search", placeholder = "Search by Blog Tag"})
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        }
    </div>
</nav>
<main role="main">
    <div class="container-fluid col-md-11">
        <br />
        @RenderBody()
    </div>
</main>
    <hr />
<footer>
    <div class="container-fluid col-md-11">
        <div class="row" id="bottom-links">
            <div class="col-md-6">
                @Html.Partial("_LoginPartial")
            </div>
            <div class="col-md-6">
                &nbsp;
                <p class="text-right">2018 - A production by The Coding Vine, built by Team Tinny</p>
            </div>
        </div>
    </div>
</footer>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
