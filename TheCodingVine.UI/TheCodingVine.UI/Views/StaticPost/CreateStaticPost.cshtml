@model TheCodingVine.UI.ViewModels.PostVM
@{
    ViewBag.Title = "Create Static Post";
}

<br />
<h2 class="text-center">Create Static Post</h2>

@using (Html.BeginForm("CreateStaticPost", "StaticPost", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="form-group">
            <label>Title:</label>
            @Html.TextBoxFor(m => m.Post.Title, new { @class = "form-control", placeholder = "Title" })
        </div>

        <div class="form-group">
            <label>Post Body:</label>
            @Html.TextAreaFor(m => m.Post.Content, new { @class = "form-control" })
        </div>
        <p class="text-right">
            <button type="submit" class="btn btn-outline-success">Save Post</button> &nbsp;&nbsp;
            @Html.ActionLink("Cancel Post Creation", "ViewStaticPosts", "StaticPost", null, new { @class = "btn btn-outline-info" })
        </p>
    </fieldset>
}