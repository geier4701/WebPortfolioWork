@model TheCodingVine.UI.ViewModels.PostVM
@{
    ViewBag.Title = "Edit Static Post";
}

<h2>Edit Static Post</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

<fieldset>
    @Html.HiddenFor(m => m.Post.StaticPostId)
    <div class="form-group">
        <label>Title:</label>
        @Html.TextBoxFor(m => m.Post.Title, new { @class = "form-control" })

    </div>

    <div class="form-group">
        <label>Blog Body:</label>
        @Html.TextAreaFor(m => m.Post.Content, new { @class = "form-control" })
    </div>
</fieldset>

    <p>
        <button type="submit">Save</button>
        @Html.ActionLink("Cancel", "ViewStaticPosts", "StaticPost")
    </p>

}