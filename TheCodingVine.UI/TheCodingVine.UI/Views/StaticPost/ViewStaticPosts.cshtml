@model TheCodingVine.UI.ViewModels.PostListVM
@{
    ViewBag.Title = "View Static Posts";
}

<br />
<h2 class="text-center">All Static Posts</h2>

@foreach (var staticPost in Model.PostList)
{
    <div class="row ">
        <div class="container-fluid col-md-offset-1 col-md-10 table-bordered">
            <br />
            <form>
                <div class="form-row">
                    <div class="col-md-8">
                        <h3>@Html.ActionLink(staticPost.Title, "ViewPostFromList/" + staticPost.StaticPostId, "StaticPost", null, new { id = "post-list-link" })</h3>
                    </div>
                    <div class="col-md-2">
                        <h3 class="text-center">@Html.ActionLink("Edit Post", "EditStaticPost", "StaticPost", new { id = staticPost.StaticPostId }, new { @class = "btn btn-outline-warning" })</h3>
                    </div>
                    <div class="col-md-2">
                        <h3 class="text-center">@Html.ActionLink("Delete Post", "DeleteStaticPost", "StaticPost", new { id = staticPost.StaticPostId }, new { @class = "btn btn-outline-danger" })</h3>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <br />
    }
